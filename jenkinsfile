pipeline {
  agent any
  options {
      ansiColor('xterm')
  }
  stages {
    stage('init') {
      steps {
        ansiColor('xterm') {
            sh 'terraform init'
        }
      }
    }
    }
    stage('plan') {
      steps {
        sh 'terraform plan'
      }
    }
    stage('apply') {
      steps {
        sh 'terraform apply -auto-approve'
      }
    }
  }
}
