pipeline {
  agent {
    node {
      label 'master'
    }
  }
  stages {
    stage('init') {
      steps {
        sh 'terraform init'
      }
    }
    stage('plan') {
      steps {
        sh 'terraform plan'
      }
    }
    stage('apply') {
      steps {
        sh 'terraform apply -autp-approve'        
      }
    }
  }
}
